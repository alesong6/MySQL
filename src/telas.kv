# Telas e seus componentes
# MVC - Model View - Controller - Separar o código das telas
#-------------------------------------------------------------------------------------------
#       Tela SplashScreen
#-------------------------------------------------------------------------------------------
<SplashScreen>:
    id: splash
    FloatLayout:
        Image:
            source: "images/logo.png"
            size_hint: 0.5, 0.6  # Tamanho em %
            pos_hint: {'center_x': 0.5, 'center_y': 0.6}  # Posição do componente

        Label:
            text: 'Relaxa, vai dar tudo errado © 2024'  # Alt 0169
            font_size: "16sp"
            color: 1, 0, 0, 1  # Altere para 1 para a opacidade total
            font_name: 'MinhaFonte'
            pos_hint: {'center_x': 0.5, 'center_y': 0.05}  # Rodapé
            size_hint: None, None #sem tamanho

#-------------------------------------------------------------------------------------------
#       Tela Login
#-------------------------------------------------------------------------------------------

#tela login
<LoginScreen>:
    id: login
    FloatLayout:
        Image:

            #imagem de fundo
            source: "images/fundo.png"
            fit_mode: "fill"
            allow_stretch: True # permite o aumento da img
            keep_ratio: True # manter a proporção da img

    BoxLayout:
        orientation:'vertical'
        spacing: '20dp'
        padding: '10sp'
        
        

        Image:
            source: "images/logo.png"
            size_hint: 1.3,1.3
            pos_hint: {'center_x':0.5,'center_y':0.5}
 
        Label:
            text:"Acessar"
            font_size: "20sp"
            color: 1, 0, 0, 1
            font_name: 'MinhaFonte'
            pos_hint: {'center_x':0.5,'y':-0.1} #rodapé
            size_hint: None, None
 
        TextInput:
            hint_text: 'Seu melhor E-mail'
            font_size: "14sp"
            size_hint: 0.9 , 0.3 #x e y
            pos_hint: {'center_x':0.5,'center_y':0.5}
            padding: ('10sp', '15sp', '10sp', '5sp')
            background_normal: "images/fundoInput.png"
        TextInput:
            hint_text: 'Sua senha'
            font_size: "14sp"
            size_hint: 0.9 , 0.3 #x e y
            pos_hint: {'center_x':0.5,'center_y':0.5}
            padding: ('10sp', '15sp', '10sp', '5sp')
            password: True #oculta a senha do usuário
            background_normal: "images/fundoInput.png"

        BoxLayout:
            orientation:'horizontal'
           
            Label:
                text:'Recuperar a Senha'
                font_size: "12sp"
                color: 1, 0, 0, 1
                font_name: 'MinhaFonte'
                pos_hint: {'center_x':0.5,'y':0.5} #rodapé
                size_hint: None,None
           
            Label:
                text:'Cadastre-se aqui'
                font_size: "12sp"
                color: 1, 0, 0, 1
                font_name: 'MinhaFonte'
                pos_hint: {'center_x':0.8,'y':0.5} #rodapé
                size_hint: None,None

        Button:
            text: 'Entrar'
            font_size: "16sp"
            size_hint: 0.3 , 0.3
            pos_hint: {'center_x':0.7,'center_y':0.5}
            # #F1 46 24 - 15 * 16 + 1
            # rgb ( 241,70,36 )
            # 241/ 255 = 0.94, 70/ 255 = 0.27, 36/255 = 0.14
            background_color: [0.94, 0.27 , 0.14 , 1 ]
            background_normal: 'images/botao.png'
            background_down: "imagens/botao2.png"
            size_hint: 0.4, 0.3

#------------------------------------------------------------------------
# Tela Cadastro
#-------------------------------------------------------------------------

<CadastroScreen>

    id: cadastro
    #imagem de fundo da tela
    FloatLayout:
        Image:

            #imagem de fundo
            source: "images/fundo.png"
            fit_mode: "fill"
            allow_stretch: True # permite o aumento da img
            keep_ratio: True # manter a proporção da img

    BoxLayout:
        orientation:'vertical'
        spacing: '20dp'
        padding: '10sp'
        
        

        Image:
            source: "images/logo.png"
            size_hint: 1.3,1.3
            pos_hint: {'center_x':0.5,'center_y':0.5}

        Label:
            text:"Cadastre-se"
            font_size: "20sp"
            color: 1, 0, 0, 1
            font_name: 'MinhaFonte'
            pos_hint: {'center_x':0.5,'y':-0.1} #rodapé
            size_hint: None, None
 
        TextInput:
            hint_text: 'Digite seu e-mail'
            font_size: "14sp"
            size_hint: 0.9 , 0.3 #x e y
            pos_hint: {'center_x':0.5,'center_y':0.5}
            padding: ('10sp', '15sp', '10sp', '5sp')
            background_normal: "images/fundoInput.png"
        TextInput:
            hint_text: 'Digite sua Senha'
            font_size: "14sp"
            size_hint: 0.9 , 0.3 #x e y
            pos_hint: {'center_x':0.5,'center_y':0.5}
            padding: ('10sp', '15sp', '10sp', '5sp')
            password: True #oculta a senha do usuário
            background_normal: "images/fundoInput.png"

        TextInput:
            hint_text: 'Confirme sua senha'
            font_size: "14sp"
            size_hint: 0.9 , 0.3 #x e y
            pos_hint: {'center_x':0.5,'center_y':0.5}
            padding: ('10sp', '15sp', '10sp', '5sp')
            password: True #oculta a senha do usuário
            background_normal: "images/fundoInput.png"
        
        BoxLayout:
            orientation:'horizontal'
            spacing: '20sp'
           
            Button:
                text:'Já tem uma conta. Faça login'
                font_size: "12sp"
                color: 1, 0, 0, 1
                font_name: 'MinhaFonte'
                pos_hint: {'center_x':0.4,'y':0.5} #rodapé
                size_hint: 0.5,None
                background_color: [1,1,1,0]
                # função executado ao clicar no item
                on_press: app.root.ir_para_login(self)
        
            Button:
                text: 'Cadastrar'
                font_size: "16sp"
                size_hint: 0.3 , 0.3
                pos_hint: {'center_x':0.7,'center_y':0.5}
                background_color: [0.94, 0.27 , 0.14 , 1 ]
                background_normal: 'images/botao.png'
                background_down: "imagens/botao2.png"
                size_hint: 0.4, 0.3
                on_press: app.root.ir_para_cadastro(self)